<div class="bg-blue-400 h-36"></div>
<div class="h-screen grid grid-cols-3 mx-5 gap-7">
    <% programs.forEach( (program)=> { %>

    <div id="grid-ctn" class="">
        <div class="bg-white rounded-sm shadow-xl p-6 text-center font-semibold leading-10">
        <div class="font-bold text-2xl text-blue-400"><%= program.prgm_nm %></div>
        <div><%= program.date_time %></div>
        <div><%= program.program_desc %></div>
        <button class="bg-blue-400 text-white px-3 rounded-sm w-full mt-5"><a href="/book/<%= program.id %> ">Book</a></button>
        <button class="text-blue-400 bg-white px-3 rounded-sm w-full mt-3 border-2 border-blue-500">More</button>
        </div>
    </div>
    <% }) %> 

</div>
